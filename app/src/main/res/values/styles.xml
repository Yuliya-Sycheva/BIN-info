<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Стиль для EditText -->
    <style name="EditText_Style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">?attr/jcHintTextColor</item>
        <item name="android:inputType">number</item>
        <item name="android:paddingStart">@dimen/margin_standard</item>
        <item name="android:paddingEnd">@dimen/edit_text_padding_end</item>
        <item name="android:background">@drawable/bg_rounded_edit_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">200</item>
        <item name="android:textAppearance">@style/Regular_16_Style</item>
    </style>

    <!-- Стиль для Toolbar -->
    <style name="Toolbar_Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/header_height</item>
        <item name="titleTextAppearance">@style/Medium_22_Style</item>
        <item name="titleTextColor">?attr/jcMainTextColor</item>
    </style>

    <!-- Стиль для текста ошибок -->
    <style name="ErrorMessageStyle">
        <item name="android:layout_marginHorizontal">@dimen/margin_standard</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/Medium_22_Style</item>
        <item name="android:textColor">?attr/jcMainTextColor</item>
    </style>

    <!-- Стиль для кнопок-->
    <style name="ButtonStyle">
        <item name="android:layout_marginHorizontal">@dimen/margin_standard</item>
        <item name="android:paddingVertical">@dimen/margin_standard</item>
        <item name="android:textAppearance">@style/Medium_16_Style</item>
        <item name="android:textColor">?attr/jcMainTextColor</item>
        <item name="android:background">@drawable/bg_rounded_button</item>
        <item name="android:gravity">center</item>
    </style>

</resources>