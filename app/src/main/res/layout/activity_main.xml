<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        style="@style/Toolbar_Style"
        app:title="@string/info_title">
    </com.google.android.material.appbar.MaterialToolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_field_height"
        android:layout_marginHorizontal="@dimen/margin_standard"
        android:layout_marginVertical="@dimen/margin_small">

        <EditText
            android:id="@+id/et_search_request"
            style="@style/EditText_Style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/enter_request_hint"
            android:imeOptions="actionDone"
            android:importantForAutofill="no" />

        <ImageButton
            android:id="@+id/iv_clear_request"
            android:layout_width="@dimen/small_icon_size"
            android:layout_height="@dimen/small_icon_size"
            android:layout_gravity="end|center_vertical"
            android:layout_marginHorizontal="@dimen/margin_standard"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="@color/black"
            android:src="@drawable/ic_clear" />
    </FrameLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_search_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/lilac"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_standard">

            <TextView
                android:id="@+id/tv_scheme"
                style="@style/Regular_16_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/jcMainTextColor"
                tools:text="Scheme: " />

            <TextView
                android:id="@+id/tv_card_type"
                style="@style/Regular_16_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_micro"
                android:textColor="?attr/jcMainTextColor"
                tools:text="Card type: " />

            <TextView
                android:id="@+id/tv_card_brand"
                style="@style/Regular_16_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_micro"
                android:textColor="?attr/jcMainTextColor"
                tools:text="Card brand: " />

            <TextView
                android:id="@+id/tv_prepaid"
                style="@style/Regular_16_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_micro"
                android:textColor="?attr/jcMainTextColor"
                tools:text="Is card prepaid: " />

            <TextView
                android:id="@+id/tv_country"
                style="@style/Regular_16_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_micro"
                android:textColor="?attr/jcMainTextColor"
                tools:text="Country: " />

            <TextView
                android:id="@+id/tv_coordinates"
                style="@style/Regular_16_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_micro"
                android:textColor="?attr/jcMainTextColor"
                tools:text="Coordinates: " />

            <TextView
                android:id="@+id/tv_bank_name"
                style="@style/Regular_16_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_micro"
                android:textColor="?attr/jcMainTextColor"
                tools:text="Bank Name: " />

            <TextView
                android:id="@+id/tv_bank_url"
                style="@style/Regular_16_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_micro"
                android:textColor="?attr/jcMainTextColor"
                tools:text="Bank URL: " />

            <TextView
                android:id="@+id/tv_bank_phone"
                style="@style/Regular_16_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_micro"
                android:textColor="?attr/jcMainTextColor"
                tools:text="Bank Phone: " />

            <TextView
                android:id="@+id/tv_bank_city"
                style="@style/Regular_16_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_micro"
                android:textColor="?attr/jcMainTextColor"
                tools:text="Bank City: " />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_error"
        style="@style/ErrorMessageStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_standard"
        android:text="@string/no_internet"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="@dimen/progress_bar_size"
        android:layout_height="@dimen/progress_bar_size"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginBottom="@dimen/margin_standard"
        android:indeterminateTint="@color/lilac" />

    <TextView
        android:id="@+id/tv_cards_in_history"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/header_height"
        android:text="@string/cards_in_history" />
</LinearLayout>