<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_search_result"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardBackgroundColor="@color/lilac"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_standard">

        <TextView
            android:id="@+id/tv_bin"
            style="@style/Regular_16_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/jcMainTextColor"
            tools:text="Bin: " />

        <TextView
            android:id="@+id/tv_scheme"
            style="@style/Regular_16_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/jcMainTextColor"
            tools:text="Scheme: " />

        <TextView
            android:id="@+id/tv_card_type"
            style="@style/Regular_16_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_micro"
            android:textColor="?attr/jcMainTextColor"
            tools:text="Card type: " />

        <TextView
            android:id="@+id/tv_card_brand"
            style="@style/Regular_16_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_micro"
            android:textColor="?attr/jcMainTextColor"
            tools:text="Card brand: " />

        <TextView
            android:id="@+id/tv_prepaid"
            style="@style/Regular_16_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_micro"
            android:textColor="?attr/jcMainTextColor"
            tools:text="Is card prepaid: " />

        <TextView
            android:id="@+id/tv_country"
            style="@style/Regular_16_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_micro"
            android:textColor="?attr/jcMainTextColor"
            tools:text="Country: " />

        <TextView
            android:id="@+id/tv_coordinates"
            style="@style/Regular_16_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_micro"
            android:textColor="?attr/jcMainTextColor"
            tools:text="Coordinates: " />

        <TextView
            android:id="@+id/tv_bank_name"
            style="@style/Regular_16_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_micro"
            android:textColor="?attr/jcMainTextColor"
            tools:text="Bank Name: " />

        <TextView
            android:id="@+id/tv_bank_url"
            style="@style/Regular_16_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_micro"
            android:textColor="?attr/jcMainTextColor"
            tools:text="Bank URL: " />

        <TextView
            android:id="@+id/tv_bank_phone"
            style="@style/Regular_16_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_micro"
            android:textColor="?attr/jcMainTextColor"
            tools:text="Bank Phone: " />

        <TextView
            android:id="@+id/tv_bank_city"
            style="@style/Regular_16_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_micro"
            android:textColor="?attr/jcMainTextColor"
            tools:text="Bank City: " />

    </LinearLayout>
</androidx.cardview.widget.CardView>